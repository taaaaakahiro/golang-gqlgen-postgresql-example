
type Todo {
  id: ID!
  userId: User!
  name: String!
}

input NewTodo {
  text: String! @validation(format: "required,len=10")
  userId: String! @validation(format: "required")
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}

directive @validation(
  format: String
) on INPUT_FIELD_DEFINITION
